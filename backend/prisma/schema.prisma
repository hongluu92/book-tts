// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Seed script configuration
// Run with: npm run prisma:seed

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String     @map("password_hash")
  createdAt    DateTime   @default(now()) @map("created_at")
  books        Book[]
  progress     Progress[]

  @@map("users")
}

model Book {
  id          String     @id @default(uuid())
  ownerUserId String     @map("owner_user_id")
  title       String
  author      String?
  language    String?
  coverPath   String?    @map("cover_path")
  epubPath   String     @map("epub_path")
  createdAt   DateTime   @default(now()) @map("created_at")
  owner       User       @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)
  chapters    Chapter[]
  progress    Progress[]

  @@index([ownerUserId])
  @@map("books")
}

model Chapter {
  id          String      @id @default(uuid())
  bookId      String      @map("book_id")
  spineIndex  Int         @map("spine_index")
  title       String?
  href        String
  xhtmlPath   String      @map("xhtml_path")
  createdAt   DateTime    @default(now()) @map("created_at")
  book        Book        @relation(fields: [bookId], references: [id], onDelete: Cascade)
  sentences   Sentence[]
  progress    Progress[]

  @@unique([bookId, spineIndex])
  @@index([bookId, spineIndex])
  @@map("chapters")
}

model Sentence {
  id            String   @id @default(uuid())
  chapterId     String   @map("chapter_id")
  sentenceIndex Int      @map("sentence_index")
  text          String   @db.Text
  markerId      String   @map("marker_id")
  chapter       Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([chapterId, markerId])
  @@index([chapterId, sentenceIndex])
  @@map("sentences")
}

model Progress {
  id            String    @id @default(uuid())
  userId        String    @map("user_id")
  bookId        String    @map("book_id")
  chapterId     String    @map("chapter_id")
  sentenceIndex Int       @map("sentence_index")
  markerId      String    @map("marker_id")
  readerCfi     String?   @map("reader_cfi")
  ttsVoice      String?   @map("tts_voice")
  ttsRate       Float?    @map("tts_rate")
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at")
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  book          Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
  chapter       Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId, chapterId])
  @@index([userId, bookId])
  @@index([bookId, chapterId])
  @@map("progress")
}
